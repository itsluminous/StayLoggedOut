{
  "manifest_version": 3,
  "name": "ChatGPT - Stay Logged Out",
  "version": "1.0",
  "description": "Automatically clicks the 'Stay Logged Out' button on ChatGPT.",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ],
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}